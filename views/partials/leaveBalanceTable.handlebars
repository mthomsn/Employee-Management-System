<div class="card">
   <div class="card-body">
      <h1>Employees Time Off Balance</h1>
      <div class="row">
         <table>
            <thead>
               <tr>
                  <th>Employee ID</th>
                  <th>Name</th>
                  <th>Department</th>
                  <th>Time Off Balance</th>
               </tr>
            </thead>
            <tbody>
               {{#if employees}}
               {{#each employees}}
               <tr>
                  <td>{{id}}</td>
                  <td>{{first_name}}</td>
                  <td>{{last_name}}</td>
                  <td>{{department}}</td>
                  <td>{{Leave.leave_balance}}</td>
               </tr>
               {{else}}
               <p>No employees to display</p>
               {{/each}}
               {{/if}}
            </tbody>
         </table>
      </div>
   </div>
</div>