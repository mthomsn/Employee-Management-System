<div class="employees list-group">
  {{#each employees}}
    <a class="list-item flex-row justify-space-between" href="/dashboard/edit/{{id}}">
      <span>{{first_name}} {{last_name}}</span>
      <span>{{title}}</span>
      <span>{{Role.salary}}</span>
      <span>Start Date: {{start_date}}</span>
      <span>Currently Employed? {{#if true}}Yes{{else}}No{{/if}}</span>
    </a>
  {{/each}}
</div>