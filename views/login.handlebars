<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">

      <h2 class="text-start">Login</h2>
      <form class="form-horizontal login-form">
        <div class="form-group mt-3">
          <label for="email-login" class="col-sm-2 control-label">Email</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="email-login" placeholder="Email">
          </div>
        </div>
        <div class="form-group mt-3">
          <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="password-login" placeholder="Password">
          </div>
        </div>
        <div class="form-group mt-3">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-dark" id="login-btn">Sign in</button>
          </div>
        </div>
      </form>
    </div>

    <div class="col-md-6">
      <h2 class="text-start">Sign Up</h2>
      <form class="form-horizontal signup-form">
        <div class="form-group mt-3">
          <label for="input-name" class="col-sm-2 control-label">Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name-signup" placeholder="name">
          </div>
        </div>
        <div class="form-group mt-3">
          <label for="email" class="col-sm-2 control-label">Email</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="email-signup" placeholder="you@email.com">
          </div>
        </div>
        <div class="form-group mt-3">
          <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="password-signup" placeholder="Password">
          </div>
        </div>
        <div class="form-group mt-3">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-dark">Sign Up</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/login.js"></script>